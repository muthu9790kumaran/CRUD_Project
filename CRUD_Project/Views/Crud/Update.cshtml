@model CRUD_Project.Models.Crud;

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Update Details</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        body {
            font-weight: bolder;
            font-size: 15px;
        }

        .active:hover {
            background-color: blue;
            border-radius: 10px;
        }
        button{
            font-size: 20px;
        }
        input{
            font-size: 20px;
        }

       
    </style>
   
</head>
<body>
    <form asp-action="Update" style="width:60%;border:2px solid black;color:black; margin-left:300px;padding:30px ">
        <input asp-for="ProductId" type="hidden" class="form-control" />

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="/Crud/Add">Add Details</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/Crud/Display">Display Details</a>
                    </li>
                    
                </ul>
            </div>
        </nav>
        <div class="form-group">
            <label asp-for="ProductName">Product Name</label>
            <input asp-for="ProductName" type="text" class="form-control">
            <span asp-validation-for="ProductName"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProductQty">Product Qty</label>
            <input asp-for="ProductQty" type="text" class="form-control">
            <span asp-validation-for="ProductQty"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" type="text" class="form-control">
            <span asp-validation-for="Price"></span>
        </div>
        <div class="form-group">
            <label asp-for="State">State</label>
            <input asp-for="State" type="text" class="form-control">
            <span asp-validation-for="State"></span>
        </div>
        <div class="form-group">
            <label asp-for="City">City</label>
            <input asp-for="City" type="text" class="form-control">
            <span asp-validation-for="City"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="background-color:green">Update</button>
        <a href="/Crud/Add" class="btn btn-primary" style="background-color:blue;color:white">Add Details</a>
        <a href="/Crud/Display" class="btn btn-primary" style="background-color:yellowgreen;color:black">Display Details</a>


        <div>
            @if (TempData["hii"] != null)
            {
                <h2>@TempData["hii"]</h2>
              @*   <script>alert( @TempData["hii"])</script> *@

            }

        </div>


    </form>
</body>
</html>